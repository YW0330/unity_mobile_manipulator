            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://platform_description/meshes/wheel_small.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://platform_description/meshes/wheel_small.STL" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="auxiliary_wheel_1" type="fixed">
        <origin rpy="0 1.5707 0" xyz="0.01 0.05 0"/>
        <parent link="base_link"/>
        <child link="base_auxiliary_wheel_1_link"/>
    </joint>

    <link name="base_auxiliary_wheel_2_link">
